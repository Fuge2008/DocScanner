<?xml version="1.0" encoding="utf-8"?>
<com.oaup.ocr.docscanner.views.TakePicBtmMenu xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_weight="3"
              android:background="@color/holo_bule_dark_deep">

     <ImageView
         android:id="@+id/takepic_setting"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:onClick="onClick"
         android:background="@drawable/document_bottom_menu_bg"/>
     <ImageView
         android:id="@+id/takepic_capture"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:onClick="onClick"
         android:background="@drawable/document_bottom_menu_bg"/>
     <ImageView
         android:id="@+id/takepic_batch"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:onClick="onClick"
         android:background="@drawable/document_bottom_menu_bg"/>
     <ImageView
        android:id="@+id/takepic_single"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:background="@drawable/document_bottom_menu_bg"/>

</com.oaup.ocr.docscanner.views.TakePicBtmMenu>